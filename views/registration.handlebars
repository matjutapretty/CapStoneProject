<form action="/register" method="post">

    <div class="row">
        <div class="col-6 right"><label for="firstName">{{translation.FirstName}}:</label></div>
        <div class="col-6"><input class="txtBox" type="text" name="firstName" value="{{Firstname}}" ></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="lastName">{{translation.LastName}}:</label></div>
        <div class="col-6"><input class="txtBox" type="text" name="lastName" value="{{Lastname}}" ></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="DOB">{{translation.DateofBirth}}:</label></div>
        <div class="col-6"><input id="DOB" type="date" name="DOB" value="{{DOB}}" ></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="gender">{{translation.Gender}}:</label></div>
        <div class="col-6">
            <label for="female">{{translation.Female}}</label>
            <input class="" type="radio" name="gender" id="female" value="Female" >
            <label for="male">{{translation.Male}}</label>
            <input class="" type="radio" name="gender" id="male" value="Male" >
        </div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="IDno">{{translation.IDNumber}}:</label></div>
        <div class="col-6"><input class="txtBox" type="number" name="IDno" value="{{IDno}}" ></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="cellNo">{{translation.CellPhoneNumber}}:</label></div>
        <div class="col-6"><input class="txtBox" type="number" name="cellNo" value="{{cellNo}}" ></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="email">{{translation.Email}}:</label></div>
        <div class="col-6"><input class="txtBox" type="email" name="email" value="{{email}}" ></div>
    </div>
    <div class="row">
        <div class="col-6 right"><label for="language">{{translation.LanguagePreference}}:</label></div>
        <div class="col-6">
            <select id="language" name="language">
                <option value="en">English</option>
                <option value="af">Afrikaans</option>
                <option value="xh">IsiXhosa</option>
                <option value="zu">IsiZulu</option>
                <option value="nso">Sepedi</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="pwd">{{translation.Password}}:</label></div>
        <div class="col-6"><input class="txtBox" type="password" name="password" value="{{password}}" >
        </div>
    </div>

    <div class="row">
        <div class="col-6 right">
            <button class="btn" type="submit" name="register" value="true">{{translation.Register}}</button>
        </div>

        <div class="col-6 left">
            <button class="btn" type="submit" name="back" value="true">{{translation.Back}}</button>
        </div>
    </div>
        
    </div>
</form>