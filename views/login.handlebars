<form action="/login" method="post">
    <div class="row">
        <div class="col-6 right"><label for="username">Username:</label></div>
        <div class="col-6"><input class="loginInput" type="text" name="username" value="{{username}}"></div>
    </div>

    <div class="row">
        <div class="col-6 right"><label for="pwd">Password:</label></div>
        <div class="col-6"><input class="loginInput" type="password" name="password" value="{{password}}"></div>
    </div>

    <div class="row">
        <div class="col-12 center">
            <button class="btn" type="submit">Login</button>
        </div>
    </div>
    </div>
</form>