<div class="row">

    <div class="col-6 left">
        <h4 class="center">{{translation.PatientDetails}}</h4>
        <p><span class="messTitle">{{translation.FirstName}}:</span> {{firstname}}</p>
        <p><span class="messTitle">{{translation.LastName}}:</span> {{surname}}</p>
        <p><span class="messTitle">{{translation.CellPhoneNumber}}:</span> {{number}}</p>
        <p><span class="messTitle">{{translation.Email}}:</span> {{email}}</p>
    </div>
    <div class="col-6 right">
        <h4 class="center">{{translation.PrescriptionDetails}}</h4>
        <p><span class="messTitle">{{translation.Doctor}}:</span> {{Doctor}}</p>
        <p><span class="messTitle">{{translation.PrescriptionDate}}:</span> {{pDate}}</p>
        <p><span class="messTitle">{{translation.PrescriptionRepeat}}:</span> {{pRepeat}}</p>
        <p><span class="messTitle">{{translation.RepeatRemaining}}:</span> {{repeatRemain}}</p>
    </div>

</div>
