<body>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <img src="/PSMSLogo.png" alt="PSMS Logo" id="PSMSLogo">
            </div>

            <div class="col-1"></div>
            <div class="col-2"></div>
            <div class="col-2"></div>
            <div class="col-1"></div>
            <div class="col-3">
                <form action="/" method="post">
                    <div class="dropdown">
                        <a class="btn">{{translation.LanguagePreference}}</a>
                        <div class="dropdown-content">
                            <div class="drop"><button class="dropBtn" name="prefLang" value="af" href="/?clang=af">Afrikaans</button></div>
                            <div class="drop"><button class="dropBtn" name="prefLang" value="en" href="/?clang=en">English</button></div>
                            <div class="drop"><button class="dropBtn" name="prefLang" value="xh" href="/?clang=xh">IsiXhosa</button></div>
                            <div class="drop"><button class="dropBtn" name="prefLang" value="zu" href="/?clang=zu">IsiZulu</button></div>
                            <div class="drop"><button class="dropBtn" name="prefLang" value="nso" href="/?clang=nso">Northern Sotho</button></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {{{body}}}
    </div>
