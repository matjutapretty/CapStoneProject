<div class="row">
    <div class="col-12 center">
        <p><span class="messTitle">{{translation.Status}}:</span> {{medStatus}}</p>
    </div>
</div>

<div class="row">
    <div class="col-12 center">
        <table id="appointTable">
            <tr>
                <td>
                    <form action="/collect" method="post">
                        <button class="btn messBtn" id="Collect" name="Collect" on
                            type="submit">{{translation.Collect}}</button>
                    </form>
                </td>
                <td>
                    <form action="/deliver" method="post">
                        <button class="btn messBtn" id="Deliver" name="Deliver" on
                            type="submit">{{translation.Deliver}}</button>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</div>